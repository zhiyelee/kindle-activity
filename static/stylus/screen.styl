@media screen and (min-width: 768px) {
  .header,
  .marketing,
  .footer {
    padding-right: 0;
    padding-left: 0;
  }
  .header {
    margin-bottom: 30px;
  }
}

.item {
  border: 1px solid #ddd;
  border-radius: 5px;
  margin:2em 0;
  background: #fff;

  .item-content {
    padding:2em 1em;
    line-height: 1.2;
    font-size: 21px;
    color: #777;
  }

  footer {
    height: 40px;
    font-size: 14px;
    background: #e5e5e5;
    .share-btn {
      width: 92px;
      height: 40px;
      float right
      .entypo-export {
        background none
        padding 0
        span {
          line-height 40px
        }
      }
      .social {
        opacity 0
        width auto !important
        ul {
          width auto !important
          li {
            width 45px
          }
        }
      }
    }
    .link {
      margin 0 0 0 2em
      float: left
    }
  }

  .link {
    float: right;
    line-height: 40px;
    margin-right: 2em;
    color: #118730;
    font-weight: bold;
  }
}


/*item-list*/
.item-list {
  -webkit-column-count: 3;
  -moz-column-count: 3;
  column-count: 3;
  column-width: 210px

  .item {
    font-size: 18px;
    margin: 0 0 1em;
    display: inline-block;
  }
}

@media screen and (max-width: 768px) {
  .item-list {
    -moz-column-count: 1;
    -webkit-column-count: 1;
    column-count: 1;
  }
}

/*page footer*/
.footer .gh {
  display: inline-block;
  vertical-align: top;
  margin-left: 1em;
}

/*pagenavbar*/
.page-nav a {
  width: 20%;
  min-width: 6em;
}


