body {
  padding-top: 5em;
  padding-bottom: 20px;
  background: #f2eee8;
}

.header,
.footer {
  padding-right: 15px;
  padding-left: 15px;
}

.header {
  border-bottom: 1px solid #e5e5e5;
  margin-bottom: 3em;
}

.header {
  h1 {
    color: #777777;

    .text-logo {
      margin-left: .6em;
      color: #118730;
    }
  }
}

.footer {
  margin-top: 5em;
  padding-top: 1em;
  color: #777;
  border-top: 1px solid #e5e5e5;
}

